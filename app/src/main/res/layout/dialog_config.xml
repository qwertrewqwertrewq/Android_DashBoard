<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 视频流地址 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频流地址"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/editRtspUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="rtsp://192.168.31.17:8554/stream1"
            android:inputType="textUri"
            android:textSize="12sp"
            android:paddingBottom="16dp" />

        <!-- 选择按钮 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择按钮（1-7）"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp" />

        <!-- 按钮名称 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按钮名称"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/editButtonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入按钮名称"
            android:inputType="text"
            android:textSize="12sp"
            android:paddingBottom="16dp" />

        <!-- Curl命令 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Curl命令"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/editCurlCommand"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="curl -X GET http://example.com/api/ -H &quot;Authorization: Bearer TOKEN&quot;"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:scrollbars="vertical"
            android:paddingBottom="16dp" />

        <!-- 布局模式 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="布局模式"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/spinnerLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSwitchLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换布局" />
        </LinearLayout>

        <!-- 按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
